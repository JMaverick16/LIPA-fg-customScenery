<?xml version="1.0"?>

<PropertyList>
    
    <path>Military_shelter_internal.ac</path>
    
    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>1000</max-m>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>shelter_day_lights_top_01</object-name>
        <object-name>shelter_day_lights_top_02</object-name>
        <object-name>shelter_day_lights_top_03</object-name>
        <object-name>shelter_day_lights_top_04</object-name>
        <object-name>shelter_day_lights_top_05</object-name>
        <condition>
            <or>
                <equals>
                    <property>sim/scenery/shelter_type_01/set_light</property>
                    <value type="int">2</value>
                </equals>
                <equals>
                    <property>sim/scenery/shelter_type_01/set_light</property>
                    <value type="int">4</value>
                </equals>
            </or>
        </condition>
    </animation>
    
    <animation>
        <type>select</type>
        <object-name>shelter_day_lights_01</object-name>
        <object-name>shelter_day_lights_02</object-name>
        <object-name>shelter_day_lights_03</object-name>
        <object-name>shelter_day_lights_04</object-name>
        <object-name>shelter_day_lights_05</object-name>
        <object-name>shelter_day_lights_06</object-name>
        <object-name>shelter_day_lights_07</object-name>
        <condition>
            <or>
                <equals>
                    <property>sim/scenery/shelter_type_01/set_light</property>
                    <value type="int">1</value>
                </equals>
                <equals>
                    <property>sim/scenery/shelter_type_01/set_light</property>
                    <value type="int">2</value>
                </equals>
            </or>
        </condition>
    </animation>

    <!-- Top lights -->

    <model>
        <name>shelter_day_lights_top_01</name>
        <path>Military_shelter_lights_internal_top.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -10.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_top_02</name>
        <path>Military_shelter_lights_internal_top.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -5.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_top_03</name>
        <path>Military_shelter_lights_internal_top.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 0.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_top_04</name>
        <path>Military_shelter_lights_internal_top.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 5.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_top_05</name>
        <path>Military_shelter_lights_internal_top.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 10.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <!-- neon lights -->
    
    <model>
        <name>internal-neon-light</name>
        <path>internal-neon-light.xml</path>
        <offsets>
            <x-m> -7.8 </x-m>
            <y-m> -9.3 </y-m>
            <z-m> 2.85 </z-m>
            <pitch-deg>-90.0</pitch-deg>
            <roll-deg>-90.0</roll-deg>
            <heading-deg>270.0</heading-deg>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_01</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -9.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_02</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -6.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <model>
        <name>shelter_day_lights_03</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -3.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <model>
        <name>shelter_day_lights_04</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 0.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <model>
        <name>shelter_day_lights_05</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 3.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <model>
        <name>shelter_day_lights_06</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 6.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_day_lights_07</name>
        <path>Military_shelter_lights_internal_neon.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 9.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <!-- Night neon lights -->
    
    <animation>
        <type>select</type>
        <object-name>shelter_internal_night_01</object-name>
        <object-name>shelter_internal_night_02</object-name>
        <object-name>shelter_internal_night_03</object-name>
        <object-name>shelter_internal_night_04</object-name>
        <condition>
            <equals>
                <property>sim/scenery/shelter_type_01/set_light</property>
                <value type="int">3</value>
            </equals>
        </condition>
    </animation>

    <model>
        <name>shelter_internal_night_01</name>
        <path>Military_shelter_lights_internal_night.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -9.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_internal_night_02</name>
        <path>Military_shelter_lights_internal_night.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> -3.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>
    
    <model>
        <name>shelter_internal_night_03</name>
        <path>Military_shelter_lights_internal_night.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 3.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <model>
        <name>shelter_internal_night_04</name>
        <path>Military_shelter_lights_internal_night.xml</path>
        <offsets>
            <x-m> 0.0 </x-m>
            <y-m> 9.0 </y-m>
            <z-m> 0.0 </z-m>
        </offsets>
    </model>

    <animation>
        <type>pick</type>
        <object-name>Plane.000</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>nasal</command>
                <script><![CDATA[
                    var setLight = getprop("sim/scenery/shelter_type_01/set_light");
                    if (setLight == nil) {
                        setLight = 4
                    } elsif (setLight >= 4) {
                        setLight = 0;
                    } elsif (setLight < 4) {
                        setLight = 4;
                    };
                    setprop("sim/scenery/shelter_type_01/set_light",setLight);
                ]]></script>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>material</type> 
        <name>Plane.000_day</name>
        <object-name>Plane.000</object-name>
        <diffuse>	
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.9</blue>
            <factor-prop>sim/scenery/shelter_type_01/top_light_diffuse</factor-prop>
        </diffuse>
        <ambient>
            <red>0.9</red>
            <green>0.9</green>
            <blue>0.9</blue>
        </ambient>
        <emission>	
            <red-prop>sim/scenery/shelter_type_01/top_light_emission_red</red-prop>
            <green-prop>sim/scenery/shelter_type_01/top_light_emission_green</green-prop>
            <blue-prop>sim/scenery/shelter_type_01/top_light_emission_blue</blue-prop>
            <factor-prop>sim/scenery/shelter_type_01/scene_light_factor</factor-prop>
        </emission>
    </animation>
    
    
</PropertyList>
